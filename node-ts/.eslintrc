{
    "parserOptions": {
        "ecmaVersion": 2017
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "env": {
        "es6": true,
        "node": true
    },
    "rules": {
        "indent": ["error"],
        "quotes": ["error", "single"],
        "keyword-spacing": ["error"]
    }
}
